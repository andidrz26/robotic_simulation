{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "robotic_simulation",
  "version": "0.1.0",
  "identifier": "com.robotic_simulation.app",
  "build": {
    "beforeDevCommand": "ng serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "ng build",
    "frontendDist": "../dist/robotic_simulation/browser"
  },
  "app": {
    "windows": [
      {
        "title": "robotic_simulation",
        "width": 800,
        "height": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
